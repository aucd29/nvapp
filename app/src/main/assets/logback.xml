<configuration>
    <appender name="logcat" class="ch.qos.logback.classic.android.LogcatAppender">
        <tagEncoder><pattern>[SAM]</pattern></tagEncoder>
        <encoder><pattern>%class{0}.%M\(%F:%L\) %msg</pattern></encoder>
    </appender>

    <!-- DEBUG ìš© -->
    <root level="debug"><appender-ref ref="logcat"/></root>
</configuration>