<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="vmodel"
            type="net.sarangnamu.libtutorial.viewmodel.TutorialViewModel" />
        <variable
            name="nvmodel"
            type="net.sarangnamu.nvapp.viewmodel.NvAppTutorialViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_android_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.15"
            app:bindFadeIn="@{nvmodel.logoFade}"
            />

        <TextView
            android:id="@+id/big_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.25"
            android:text="@string/tutorial_intro_big_title"
            android:textSize="20sp"
            android:textStyle="bold"
            app:bindFadeIn="@{nvmodel.titleFade}"
            app:bindTransitionY="@{nvmodel.titleTransition}"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tutorial_intro_title"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/big_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:bindFadeIn="@{nvmodel.titleFade}"
            app:bindTransitionY="@{nvmodel.titleTransition}"
            />

        <!-- LEFT -->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/panel_left"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#c4c4c4"
            />

        <!--app:bindStartCellStartAnimation="@{nvmodel.phoneFrameFade}"-->

        <!-- CENTER -->
        <View
            android:id="@+id/panel_center"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#c4c4c4"
            />

        <!--app:bindFadeIn="@{nvmodel.phoneFrameFade}"-->
        <!--app:bindTransitionY="@{nvmodel.phoneFrameTransition}"-->

        <!-- RIGHT -->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/panel_right"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#c4c4c4"
            />

        <!--app:bindEndCellStartAnimation="@{nvmodel.phoneFrameFade}"-->

        <!-- RIGHT2 -->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/panel_right2"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintStart_toEndOf="@+id/panel_right"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="27.8dp"
            android:background="#c4c4c4"
            />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/phone_frame"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/shape_tutorial_phone_frame"
            />

            <!--app:bindFadeIn="@{nvmodel.phoneFrameFade}"-->
            <!--app:bindTransitionY="@{nvmodel.phoneFrameTransition}"-->

        <!-- buttons -->

        <android.support.constraint.ConstraintLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="20dp"
            android:background="@android:color/white"
            android:elevation="1dp"
            android:visibility="invisible"
            >

            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:onClick="@{() -> nvmodel.login()}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <Button
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next"
                android:onClick="@{() -> vmodel.next()}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/login"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</layout>
