<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="net.sarangnamu.nvapp.model.local.navigation.NavServiceItem" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        >

        <net.sarangnamu.libdingbat.widget.AwesomeSolid
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="27sp"
            tools:text="@string/fa_address_book"
            android:text="@{item.icon}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/text"
            app:layout_constraintVertical_chainStyle="packed"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.label}"
            tools:text="LABEL NAME"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            />

        <!--<net.sarangnamu.libdingbat.widget.AwesomeSolid-->
            <!--android:id="@+id/new_icon"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="7sp"-->
            <!--tools:text="@string/fa_eye"-->
            <!--android:textColor="@color/colorAccent"-->
            <!--app:layout_constraintTop_toTopOf="@+id/icon"-->
            <!--app:layout_constraintEnd_toEndOf="@+id/icon"-->
            <!--/>-->

    </android.support.constraint.ConstraintLayout>
</layout>
